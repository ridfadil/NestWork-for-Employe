<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sebasku.networks.fragment.RequestGajiFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/width_fragRequestGaji_iv"
            android:layout_height="@dimen/width_fragRequestGaji_iv"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_fragRequestGaji_iv"
            android:src="@drawable/ic_slip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_fragRequestGaji_tv"
            android:text="@string/request_slip_gaji"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_fragRequestGaji"
            android:layout_marginRight="@dimen/marginLeft_fragRequestGaji"
            android:layout_marginTop="@dimen/marginLeft_fragRequestGaji"
            android:background="@drawable/button_1"
            android:text="@string/request_slip"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
